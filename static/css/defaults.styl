// Stylus file for default/standard classes (like standard_form for flex form)
@require "default_vars.styl"

// Titillium web font
@import url('https://fonts.googleapis.com/css?family=Titillium+Web&display=swap')

.title_text {
  margin-left 0
  margin-right 0
  margin-bottom: 5px;
  margin-top 0;
  padding-top 5%
  color pink-colour
  text-align center
  border-bottom 1px solid light-grey
}

a {
  color link-colour
}

html {
  margin 0
  padding 0
  background-color background-colour
  color foreground-colour
  //text-shadow 0 0 0

  body {
    margin 0
    padding 0
    height 100%
    color foreground-colour
    background-color background-colour

    .body {
      padding-top 5%
      margin-left 25%
      margin-right 25%
      width 50%
    }
  }
  h2 {
    padding-bottom 30px
  }
  h3 {
    padding-bottom 20px
  }
}

.standard_form {
  display flex
  justify-content space-evenly
  flex-direction column

  .form_btn {
    margin-top 35px
    background button-background
    color button-foreground
    border 2px black
    height 30px
    width 50%
    margin-left 25%
    margin-right 25%
    border-radius 4px
    cursor pointer
    transition 0.4s

  }
  .form_btn:hover {
    background button-light-background
    border-radius 8px
    color black
  }

  .hard_left {
    width 30%
    display flex

    label {
      float left
    }
    input {
      float right
    }
  }

  .standard_form_row {
    padding-bottom 5px

    input {
      width 100%
      box-sizing border-box
      padding 20px 5px 20px 5px
      border-radius 5px
      border
    }
  }
}

* {
  font-family 'Titillium Web', sans-serif
}


