// Stylus file for default/standard classes (like standard_form for flex form)
@require "default_vars.styl"

.title_text {
  margin-left 0
  margin-right 0
  margin-bottom: 5px;
  margin-top 0;
  padding-top 5%
  color pink-colour
  text-align center
  border-bottom 1px solid light-grey
}

a {
  color lightblue
}

html {
  margin 0
  padding 0
  background-color background-colour
  color foreground-colour
  //text-shadow 0 0 0

  body {
    margin 0
    padding 0
    height 100%
    color foreground-colour
    background-color background-colour

    .body {
      padding-top 5%
      margin-left 25%
      margin-right 25%
      width 50%
    }
  }
}

.standard_form {
  display flex
  justify-content space-evenly
  flex-direction column
}